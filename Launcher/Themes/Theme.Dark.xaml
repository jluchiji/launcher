<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Foreground Brushes -->
    <SolidColorBrush x:Key="ForegroundBrushStrong" Color="#FFFFFF" />
    <SolidColorBrush x:Key="ForegroundBrushWeak" Color="#A9A9A9" />
    <SolidColorBrush x:Key="ForegroundBrushStroke" Color="#858585" />
    <SolidColorBrush x:Key="ForegroundBrushAccent" Color="#3399FF" />

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="BackgroundBrushLight" Color="#646464" />
    <SolidColorBrush x:Key="BackgroundBrushDim" Color="#4B4B4B" />

    <!-- Window outer border brush -->
    <SolidColorBrush x:Key="Window.OuterBorderBrush" Color="#222222"></SolidColorBrush>
    
</ResourceDictionary>